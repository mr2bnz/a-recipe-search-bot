# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞–ª–∏—á–∏—è –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã—Ö –¥–∞–Ω–Ω—ã—Ö
if not CATEGORIES or not COOKING_TIME or not SAMPLE_RECIPES:
    raise ValueError("–û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –¥–∞–Ω–Ω—ã–µ")

# –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –±–æ—Ç–∞
try:
    bot = telebot.TeleBot('7304858182:AAF2XHdpeVeTs0mVXn33oaOCG8O7Rdw8Fhk')
    logger.info("–ë–æ—Ç —É—Å–ø–µ—à–Ω–æ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω")
except Exception as e:
    logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –±–æ—Ç–∞: {e}")
    raise

def get_main_keyboard():
    """–°–æ–∑–¥–∞–Ω–∏–µ –≥–ª–∞–≤–Ω–æ–π –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã"""
    keyboard = types.InlineKeyboardMarkup(row_width=2)
    keyboard.add(
        types.InlineKeyboardButton("üîç –ü–æ–∏—Å–∫ –ø–æ –Ω–∞–∑–≤–∞–Ω–∏—é", callback_data="search"),
        types.InlineKeyboardButton("üìã –í—Å–µ —Ä–µ—Ü–µ–ø—Ç—ã", callback_data="all_recipes")
    )
    keyboard.add(
        types.InlineKeyboardButton("üìë –ö–∞—Ç–µ–≥–æ—Ä–∏–∏", callback_data="category"),
        types.InlineKeyboardButton("‚è± –í—Ä–µ–º—è –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è", callback_data="time")
    )
    keyboard.add(
        types.InlineKeyboardButton("üé≤ –°–ª—É—á–∞–π–Ω—ã–π —Ä–µ—Ü–µ–ø—Ç", callback_data="random"),
        types.InlineKeyboardButton("‚ùì –ü–æ–º–æ—â—å", callback_data="help")
    )
    return keyboard

def format_recipe(name: str, recipe: dict) -> str:
    """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —Ä–µ—Ü–µ–ø—Ç–∞ –¥–ª—è –≤—ã–≤–æ–¥–∞"""
    try:
        category_name = CATEGORIES.get(recipe["category"], "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –∫–∞—Ç–µ–≥–æ—Ä–∏—è")
        cooking_time_name = COOKING_TIME.get(recipe["cooking_time"], "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ–µ –≤—Ä–µ–º—è")
        
        # –ó–∞–≥–æ–ª–æ–≤–æ–∫
        text = f"üç≥ {name}\n\n"
        text += f"–ö–∞—Ç–µ–≥–æ—Ä–∏—è: {category_name}\n"
        text += f"–í—Ä–µ–º—è –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è: {cooking_time_name}\n"
        text += f"–ü–æ—Ä—Ü–∏–π: {recipe['portions']}\n\n"
        
        # –ò–Ω–≥—Ä–µ–¥–∏–µ–Ω—Ç—ã
        text += "üìù –ò–Ω–≥—Ä–µ–¥–∏–µ–Ω—Ç—ã:\n"
        for ing in recipe["ingredients"]:
            text += f"‚Ä¢ {ing['name']}: {ing['amount']} {ing['unit']}\n"
        
        # –®–∞–≥–∏ –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è
        text += "\nüë©‚Äçüç≥ –ü—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏–µ:\n"
        for i, step in enumerate(recipe["steps"], 1):
            text += f"{i}. {step}\n"
        
        return text
    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–∏ —Ä–µ—Ü–µ–ø—Ç–∞ {name}: {e}")
        return f"–û—à–∏–±–∫–∞ –ø—Ä–∏ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–∏ —Ä–µ—Ü–µ–ø—Ç–∞ {name}. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –¥—Ä—É–≥–æ–π —Ä–µ—Ü–µ–ø—Ç."

@bot.message_handler(commands=['start'])
def start(message):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /start"""
    welcome_text = (
        "üëã –ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç –¥–ª—è –ø–æ–∏—Å–∫–∞ —Ä–µ—Ü–µ–ø—Ç–æ–≤.\n\n"
        "–£ –º–µ–Ω—è –µ—Å—Ç—å —Ä–µ—Ü–µ–ø—Ç—ã –≤ —Å–ª–µ–¥—É—é—â–∏—Ö –∫–∞—Ç–µ–≥–æ—Ä–∏—è—Ö:\n"
        "‚Ä¢ –û—Å–Ω–æ–≤–Ω—ã–µ –±–ª—é–¥–∞\n"
        "‚Ä¢ –°—É–ø—ã\n"
        "‚Ä¢ –°–∞–ª–∞—Ç—ã\n"
        "‚Ä¢ –î–µ—Å–µ—Ä—Ç—ã\n"
        "‚Ä¢ –ó–∞–≤—Ç—Ä–∞–∫–∏\n"
        "‚Ä¢ –ó–∞–∫—É—Å–∫–∏\n\n"
        "–í—ã –º–æ–∂–µ—Ç–µ –Ω–∞–π—Ç–∏ —Ä–µ—Ü–µ–ø—Ç—ã:\n"
        "‚Ä¢ –ø–æ –Ω–∞–∑–≤–∞–Ω–∏—é –±–ª—é–¥–∞\n"
        "‚Ä¢ –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏\n"
        "‚Ä¢ –ø–æ –≤—Ä–µ–º–µ–Ω–∏ –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è\n"
        "‚Ä¢ –ø–æ–ª—É—á–∏—Ç—å —Å–ª—É—á–∞–π–Ω—ã–π —Ä–µ—Ü–µ–ø—Ç\n\n"
        "–í—ã–±–µ—Ä–∏—Ç–µ, —á—Ç–æ –≤–∞—Å –∏–Ω—Ç–µ—Ä–µ—Å—É–µ—Ç:"
    )
    bot.send_message(message.chat.id, welcome_text, reply_markup=get_main_keyboard())

@bot.message_handler(commands=['help'])
def help_command(message):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /help"""
    help_text = """
‚ùì –ü–æ–º–æ—â—å –ø–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—é –±–æ—Ç–∞

–í—ã –º–æ–∂–µ—Ç–µ –Ω–∞–π—Ç–∏ —Ä–µ—Ü–µ–ø—Ç—ã —Å–ª–µ–¥—É—é—â–∏–º–∏ —Å–ø–æ—Å–æ–±–∞–º–∏:

1. üîç –ü–æ–∏—Å–∫ –ø–æ –Ω–∞–∑–≤–∞–Ω–∏—é - –≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –±–ª—é–¥–∞
2. üìë –ö–∞—Ç–µ–≥–æ—Ä–∏–∏ - –≤—ã–±–µ—Ä–∏—Ç–µ –∫–∞—Ç–µ–≥–æ—Ä–∏—é –±–ª—é–¥–∞
3. ‚è± –í—Ä–µ–º—è –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è - –≤—ã–±–µ—Ä–∏—Ç–µ –ø–æ–¥—Ö–æ–¥—è—â–µ–µ –≤—Ä–µ–º—è
4. üé≤ –°–ª—É—á–∞–π–Ω—ã–π —Ä–µ—Ü–µ–ø—Ç - –ø–æ–ª—É—á–∏—Ç–µ —Å–ª—É—á–∞–π–Ω—ã–π —Ä–µ—Ü–µ–ø—Ç

–î–ª—è –∫–∞–∂–¥–æ–≥–æ —Ä–µ—Ü–µ–ø—Ç–∞ –≤—ã –ø–æ–ª—É—á–∏—Ç–µ:
‚Ä¢ –°–ø–∏—Å–æ–∫ –∏–Ω–≥—Ä–µ–¥–∏–µ–Ω—Ç–æ–≤ —Å –≥—Ä–∞–º–º–æ–≤–∫–∞–º–∏
‚Ä¢ –ü–æ—à–∞–≥–æ–≤—É—é –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—é –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è
‚Ä¢ –í—Ä–µ–º—è –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è
‚Ä¢ –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø–æ—Ä—Ü–∏–π

–ö–æ–º–∞–Ω–¥—ã:
/start - –ù–∞—á–∞—Ç—å —Å–Ω–∞—á–∞–ª–∞
/help - –ü–æ–∫–∞–∑–∞—Ç—å —ç—Ç—É —Å–ø—Ä–∞–≤–∫—É

–î–ª—è –æ—Ç–º–µ–Ω—ã –ø–æ–∏—Å–∫–∞ –Ω–∞–∂–º–∏—Ç–µ –∫–Ω–æ–ø–∫—É "¬´ –ù–∞–∑–∞–¥"
"""
    keyboard = types.InlineKeyboardMarkup()
    keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
    bot.send_message(message.chat.id, help_text, reply_markup=keyboard)

@bot.callback_query_handler(func=lambda call: True)
def callback_handler(call):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—Å–µ—Ö callback –∑–∞–ø—Ä–æ—Å–æ–≤ –æ—Ç –∏–Ω–ª–∞–π–Ω-–∫–Ω–æ–ø–æ–∫"""
    try:
        if call.data == "back":
            bot.edit_message_text(
                "–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ:",
                call.message.chat.id,
                call.message.message_id,
                reply_markup=get_main_keyboard()
            )

        elif call.data == "all_recipes":
            text = "üìã –î–æ—Å—Ç—É–ø–Ω—ã–µ —Ä–µ—Ü–µ–ø—Ç—ã:\n\n"
            for category in CATEGORIES.values():
                text += f"üìë {category}:\n"
                for name, recipe in SAMPLE_RECIPES.items():
                    if CATEGORIES[recipe["category"]] == category:
                        text += f"‚Ä¢ {name}\n"
                text += "\n"
            
            keyboard = types.InlineKeyboardMarkup(row_width=1)
            for name in SAMPLE_RECIPES.keys():
                keyboard.add(types.InlineKeyboardButton(name, callback_data=f"recipe_{name}"))
            keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
            
            bot.edit_message_text(
                text,
                call.message.chat.id,
                call.message.message_id,
                reply_markup=keyboard
            )

        elif call.data == "search":
            keyboard = types.InlineKeyboardMarkup()
            keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
            bot.edit_message_text(
                "üîç –í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –±–ª—é–¥–∞, –∫–æ—Ç–æ—Ä–æ–µ —Ö–æ—Ç–∏—Ç–µ –Ω–∞–π—Ç–∏:\n\n"
                "–î–ª—è –æ—Ç–º–µ–Ω—ã –ø–æ–∏—Å–∫–∞ –Ω–∞–∂–º–∏—Ç–µ –∫–Ω–æ–ø–∫—É ¬´–ù–∞–∑–∞–¥¬ª",
                call.message.chat.id,
                call.message.message_id,
                reply_markup=keyboard
            )
            bot.register_next_step_handler(call.message, search_recipe)

        elif call.data == "category":
            keyboard = types.InlineKeyboardMarkup(row_width=1)
            for code, name in CATEGORIES.items():
                keyboard.add(types.InlineKeyboardButton(name, callback_data=f"category_{code}"))
            keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
            bot.edit_message_text(
                "üìë –í—ã–±–µ—Ä–∏—Ç–µ –∫–∞—Ç–µ–≥–æ—Ä–∏—é –±–ª—é–¥–∞:",
                call.message.chat.id,
                call.message.message_id,
                reply_markup=keyboard
            )

        elif call.data == "time":
            keyboard = types.InlineKeyboardMarkup(row_width=1)
            for code, name in COOKING_TIME.items():
                keyboard.add(types.InlineKeyboardButton(name, callback_data=f"time_{code}"))
            keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
            bot.edit_message_text(
                "‚è± –í—ã–±–µ—Ä–∏—Ç–µ –≤—Ä–µ–º—è –ø—Ä–∏–≥–æ—Ç–æ–≤–ª–µ–Ω–∏—è:",
                call.message.chat.id,
                call.message.message_id,
                reply_markup=keyboard
            )

        elif call.data.startswith(("category_", "time_")):
            filter_type, value = call.data.split("_")
            recipes = []
            
            for name, recipe in SAMPLE_RECIPES.items():
                if recipe[filter_type] == value:
                    recipes.append(name)
            
            if recipes:
                keyboard = types.InlineKeyboardMarkup(row_width=1)
                for recipe in recipes:
                    keyboard.add(types.InlineKeyboardButton(recipe, callback_data=f"recipe_{recipe}"))
                keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
                
                text = "–ù–∞–π–¥–µ–Ω—ã —Å–ª–µ–¥—É—é—â–∏–µ —Ä–µ—Ü–µ–ø—Ç—ã:\n\n"
                for recipe in recipes:
                    text += f"‚Ä¢ {recipe}\n"
                
                bot.edit_message_text(
                    text,
                    call.message.chat.id,
                    call.message.message_id,
                    reply_markup=keyboard
                )
            else:
                keyboard = types.InlineKeyboardMarkup()
                keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
                bot.edit_message_text(
                    "–ö —Å–æ–∂–∞–ª–µ–Ω–∏—é, —Ä–µ—Ü–µ–ø—Ç–æ–≤ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ.",
                    call.message.chat.id,
                    call.message.message_id,
                    reply_markup=keyboard
                )

        elif call.data.startswith("recipe_"):
            recipe_name = call.data[7:]  # –£–±–∏—Ä–∞–µ–º –ø—Ä–µ—Ñ–∏–∫—Å "recipe_"
            if recipe_name in SAMPLE_RECIPES:
                recipe_text = format_recipe(recipe_name, SAMPLE_RECIPES[recipe_name])
                keyboard = types.InlineKeyboardMarkup()
                keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
                bot.edit_message_text(
                    recipe_text,
                    call.message.chat.id,
                    call.message.message_id,
                    reply_markup=keyboard
                )

        elif call.data == "random":
            recipe_name = random.choice(list(SAMPLE_RECIPES.keys()))
            recipe_text = format_recipe(recipe_name, SAMPLE_RECIPES[recipe_name])
            keyboard = types.InlineKeyboardMarkup()
            keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
            bot.edit_message_text(
                f"üé≤ –°–ª—É—á–∞–π–Ω—ã–π —Ä–µ—Ü–µ–ø—Ç:\n\n{recipe_text}",
                call.message.chat.id,
                call.message.message_id,
                reply_markup=keyboard
            )

        elif call.data == "help":
            help_command(call.message)

        # –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–∞–µ–º –æ–±—Ä–∞–±–æ—Ç–∫—É callback-–∑–∞–ø—Ä–æ—Å–∞
        bot.answer_callback_query(call.id)

    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –≤ –æ–±—Ä–∞–±–æ—Ç–∫–µ callback: {e}")
        try:
            bot.answer_callback_query(call.id, "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑.")
            keyboard = types.InlineKeyboardMarkup()
            keyboard.add(types.InlineKeyboardButton("¬´ –í –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data="back"))
            bot.edit_message_text(
                "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞. –í–µ—Ä–Ω–∏—Ç–µ—Å—å –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é –∏ –ø–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞.",
                call.message.chat.id,
                call.message.message_id,
                reply_markup=keyboard
            )
        except:
            pass

def search_recipe(message):
    """–§—É–Ω–∫—Ü–∏—è –ø–æ–∏—Å–∫–∞ —Ä–µ—Ü–µ–ø—Ç–∞ –ø–æ –Ω–∞–∑–≤–∞–Ω–∏—é"""
    try:
        # –ü—Ä–æ–≤–µ—Ä—è–µ–º, –Ω–µ —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —Å–æ–æ–±—â–µ–Ω–∏–µ –∫–æ–º–∞–Ω–¥–æ–π
        if message.text.startswith('/'):
            return

        search_query = message.text.lower().strip()
        
        # –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞ –ø—É—Å—Ç–æ–π –∑–∞–ø—Ä–æ—Å
        if not search_query:
            bot.reply_to(message, "–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –±–ª—é–¥–∞ –¥–ª—è –ø–æ–∏—Å–∫–∞.")
            return
            
        found_recipes = []
        
        for name, recipe in SAMPLE_RECIPES.items():
            if search_query in name.lower():
                found_recipes.append(name)
        
        if found_recipes:
            keyboard = types.InlineKeyboardMarkup(row_width=1)
            text = "üîç –ù–∞–π–¥–µ–Ω—ã —Å–ª–µ–¥—É—é—â–∏–µ —Ä–µ—Ü–µ–ø—Ç—ã:\n\n"
            for recipe in found_recipes:
                text += f"‚Ä¢ {recipe}\n"
                keyboard.add(types.InlineKeyboardButton(recipe, callback_data=f"recipe_{recipe}"))
            keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
            bot.send_message(message.chat.id, text, reply_markup=keyboard)
        else:
            keyboard = types.InlineKeyboardMarkup()
            keyboard.add(types.InlineKeyboardButton("¬´ –ù–∞–∑–∞–¥", callback_data="back"))
            bot.send_message(
                message.chat.id,
                "–ö —Å–æ–∂–∞–ª–µ–Ω–∏—é, —Ä–µ—Ü–µ–ø—Ç –Ω–µ –Ω–∞–π–¥–µ–Ω. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –¥—Ä—É–≥–æ–π –∑–∞–ø—Ä–æ—Å!",
                reply_markup=keyboard
            )
    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–∏—Å–∫–µ —Ä–µ—Ü–µ–ø—Ç–∞: {e}")
        keyboard = types.InlineKeyboardMarkup()
        keyboard.add(types.InlineKeyboardButton("¬´ –í –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data="back"))
        bot.reply_to(
            message, 
            "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–∏—Å–∫–µ. –í–µ—Ä–Ω–∏—Ç–µ—Å—å –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é –∏ –ø–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞.",
            reply_markup=keyboard
        )

@bot.message_handler(func=lambda message: True)
def echo_all(message):
    """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—Å–µ—Ö –æ—Å—Ç–∞–ª—å–Ω—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π"""
    try:
        keyboard = types.InlineKeyboardMarkup()
        keyboard.add(types.InlineKeyboardButton("¬´ –í –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é", callback_data="back"))
        bot.reply_to(
            message,
            "–ò–∑–≤–∏–Ω–∏—Ç–µ, —è –≤–∞—Å –Ω–µ –ø–æ–Ω—è–ª. –í–æ—Å–ø–æ–ª—å–∑—É–π—Ç–µ—Å—å –∫–Ω–æ–ø–∫–∞–º–∏ –º–µ–Ω—é –∏–ª–∏ –∫–æ–º–∞–Ω–¥–æ–π /help –¥–ª—è —Å–ø—Ä–∞–≤–∫–∏.",
            reply_markup=keyboard
        )
    except Exception as e:
        logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ —Å–æ–æ–±—â–µ–Ω–∏—è: {e}")

def main():
    """–ó–∞–ø—É—Å–∫ –±–æ—Ç–∞"""
    try:
        logger.info("–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω...")
        bot.polling(none_stop=True, timeout=60)
    except Exception as e:
        logger.error(f"–ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞: {e}")
        bot.stop_polling()
    finally:
        logger.info("–ë–æ—Ç –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")

if __name__ == '__main__':
    main() 
